<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bakeryteam.bakeryapp.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <TextField promptText="Username" maxWidth="150" fx:id = "username"/>
    <PasswordField promptText="Password" maxWidth="150" fx:id = "password"/>
    <CheckBox text="Remember me" fx:id = "rememberMe"/>
    <Group>
        <Button text="Log in" onAction="#onLoginButtonClick" fx:id = "loginButton"/>
        <Button text="Register" layoutX="60"/>
    </Group>
</VBox>
